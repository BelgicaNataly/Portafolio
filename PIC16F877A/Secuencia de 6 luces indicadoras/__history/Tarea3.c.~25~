#include <16f877a.h>
#fuses xt, nowdt
#use delay(clock=8MHZ)

void main()
{
   // Variables  
   int entrada;
   
   //Configuracion del microcontrolador
   set_tris_a(0b111111);
   set_tris_b(0b00000000);
   set_tris_c(0b00000000);
   set_tris_d(0b00000000);
   output_b(0X00);
   output_c(0X00);
   output_d(0X00);

   //Programa o proceso
   while(true)
   {
     entrada=input(PIN_A0);
     if(entrada==1)
     {         
       output_high(PIN_B0);
       delay_ms(50);
       output_low(PIN_B0);
       delay_ms(50);
       output_high(PIN_B3);
       delay_ms(50);
       output_low(PIN_B3);
       delay_ms(50);
       output_high(PIN_C1);
       delay_ms(50);
       output_low(PIN_C1);
       delay_ms(50);
       output_high(PIN_C5);
       delay_ms(50);
       output_low(PIN_C5);
       delay_ms(50);
       output_high(PIN_D4);
       delay_ms(50);
       output_low(PIN_D4);
       delay_ms(50);
       output_high(PIN_D6);
       delay_ms(50);
       output_low(PIN_D6);
       delay_ms(50);
     }
     else  
     {
       output_high(PIN_B0);
       delay_ms(50);
       output_low(PIN_B0);
       delay_ms(50);
       output_high(PIN_C1);
       delay_ms(50);
       output_low(PIN_C1);
       delay_ms(50);
       output_high(PIN_D4);
       delay_ms(50);
       output_low(PIN_D4);
       delay_ms(50);        
     }
   }
}
