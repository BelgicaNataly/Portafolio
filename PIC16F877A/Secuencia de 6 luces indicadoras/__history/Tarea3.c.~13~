#include <16f877a.h>
#fuses xt, nowdt
#use delay(clock=20Mhz)


void main()
{
   // Variables  
   int entrada;
   
   //Configuracion
   set_tris_a(0b111111);
   set_tris_b(0b00000000);
   set_tris_c(0b00000000);
   set_tris_d(0b00000000);

   //Programa
   while(true) //BUCLE INFINITO 
   {
     entrada=input(PIN_A0);
     if(entrada==1)
     {         
       output_b(0X01);
       delay_ms(50);
       output_b(0X02);
       delay_ms(50);
       output_b(0X00);
       output_c(0X01);
       delay_ms(50);
       output_c(0X02);
       delay_ms(50);
       output_c(0X00);
       output_d(0X01);
       delay_ms(50);
       output_d(0X02);
       delay_ms(50);
       output_d(0X00);
     }
     else  
     {
       output_b(0X01);
       delay_ms(50);
       output_b(0X00);
       delay_ms(50);
       output_c(0X01);
       delay_ms(50);
       output_c(0X00); 
       delay_ms(50);
       output_d(0X01);
       delay_ms(50);
       output_d(0X00);         
     }
   }
}
